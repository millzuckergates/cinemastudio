<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Cinema Studio{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <!-- CSS Cinema Studio -->
        <link rel="stylesheet" href="{{ asset('/css/cs-style.css') }}">
        <!-- CDN Bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
        <!-- CDN Bootstrap icons -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            {% endblock %}
        </head>
    <body>
    {# Menu latéral #}
        {% if is_granted('ROLE_USER') %}
            {% if app.user.isverified == true %}
            <button class="btn-sm position-absolute border border-dark rounded-circle bg-light m-3" style="z-index: 2;" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasScrolling" aria-controls="offcanvasScrolling">
                <i class="bi bi-chevron-double-right"></i>
            </button>

                <div class="offcanvas offcanvas-start bg-light" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasScrolling" aria-labelledby="offcanvasScrollingLabel">
                    <button type="button" class="nav-button btn-sm position-absolute end-0 border border-dark rounded-circle bg-light m-3" data-bs-dismiss="offcanvas" aria-label="Close">
                        <i class="bi bi-chevron-double-left"></i>
                    </button>
                    <div class="offcanvas-body">
                        <ul class="navbar-ul navbar-nav me-auto">
                            <li class="nav-item px-2 fs13 pb-5 navbar-logo">
                                <img src="{{ asset('/images/design/cs_logo.png') }}" width="80%">
                            </li>
                            <li class="nav-item px-1 fs13">
                                <a href="/bureau" class="nav-link"><i class="bi bi-house-fill icon-size-navbar pe-2"></i>Bureau</a>
                            </li>
                            <hr class="m-0 w-100">
                            <li class="nav-item px-1 fs13">
                                <a class="nav-link"><i class="bi bi-list-columns-reverse icon-size-navbar pe-2"></i></i>Filmographie</a>
                            </li>
                            <li class="nav-item px-1 fs13">
                                <a class="nav-link"><i class="bi bi-cash icon-size-navbar pe-2"></i>Budget</a>
                            </li>
                            <li class="nav-item px-1 fs13">
                                <a class="nav-link"><i class="bi bi-pen-fill icon-size-navbar pe-2"></i>Projets</a>
                            </li>
                            <li class="nav-item px-1 fs13">
                                <a class="nav-link"><i class="bi bi-camera-reels-fill icon-size-navbar pe-2"></i>Matériel</a>
                            </li>
                            <li class="nav-item px-1 fs13">
                                <a class="nav-link"><i class="bi bi-calendar3 icon-size-navbar pe-2"></i></i>Planning</a>
                            </li>
                            <li class="nav-item px-1 fs13">
                                <a class="nav-link"><i class="bi bi-bar-chart-line-fill icon-size-navbar pe-2"></i>Statistiques</a>
                            </li>
                            <li class="nav-item px-1 fs13">
                                <a class="nav-link"><i class="bi bi-file-earmark-person-fill icon-size-navbar pe-2"></i></i>Casting</a>
                            </li>
                            <hr class="m-0 w-100"> 
                            <li class="nav-item px-1 fs13">
                                <a href="" class="nav-link"><i class="bi bi-newspaper icon-size-navbar pe-2"></i></i></i>Actualités</a>
                            </li>                  
                            <li class="nav-item px-1 fs13">
                                <a href="/film" class="nav-link"><i class="bi bi-camera-video-fill icon-size-navbar pe-2"></i></i>Films</a>
                            </li>
                            <li class="nav-item px-1 fs13">
                                <a class="nav-link"><i class="bi bi-tv-fill icon-size-navbar pe-2"></i>Séries</a>
                            </li>
                            <li class="nav-item px-1 fs13">
                                <a class="nav-link"><i class="bi bi-film icon-size-navbar pe-2"></i>Bandes-annonces</a>
                            </li>
                            <li class="nav-item px-1 fs13">
                                <a class="nav-link"><i class="bi bi-disc-fill icon-size-navbar pe-2"></i>Bluray/DVD</a>
                            </li>
                            <li class="nav-item px-1 fs13">
                                <a class="nav-link"><i class="bi bi-cast icon-size-navbar pe-2"></i>Streaming</a>
                            </li>
                            <li class="nav-item px-1 fs13">
                                <a class="nav-link"><i class="bi bi-trophy-fill icon-size-navbar pe-2"></i></i>Récompenses</a>
                            </li>
                        </ul>

                    </div>
                </div>
            {% endif %}
                {# Menu online #} 
                <nav class="navbar nav-top navbar-expand bg-light py-3 border-0">
                    <div class="container-fluid">                        
                        <div class="collapse navbar-collapse justify-content-end">
                            <ul class="navbar-nav">
                                <li class="nav-top-previous nav-item px-2">
                                    <a class="text-csblack" href="{{ app.request.headers.get('referer') }}"><i class="bi bi-chevron-left icon-size"></i></a>
                                </li>
                                <!-- Barre de recherche -->
                                <button class="d-xl-none border-0 bg-transparent px-2 py-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasResponsive" aria-controls="offcanvasResponsive">
                                    <i class="bi bi-search icon-size"></i>
                                </button>

                                <div class="offcanvas-xl offcanvas-top" data-bs-scroll="true" tabindex="-1" id="offcanvasResponsive" aria-labelledby="offcanvasResponsiveLabel">
                                    <div class="offcanvas-header">                               
                                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" data-bs-target="#offcanvasResponsive" aria-label="Close"></button>
                                    </div>
                                    <div class="offcanvas-body">
                                        <div class="test position-absolute start-50 top-50 translate-middle w-50">
                                            {{ render(controller('App\\Controller\\RechercheController::barreDeRecherche')) }}       
                                        </div>
                                    </div>
                                </div>

                                <li class="nav-item nav-top-budget px-2 fs14 fw-bold d-flex align-items-center text-success">
                                    <i class="bi bi-cash px-2 icon-size text-dark"></i>{{ app.user.budget|number_format }}
                                </li>

                                <!-- Date -->
                                <li class="nav-item nav-top-date px-2 fs13 fw-bold d-flex align-items-center" id="navTopDate">
                                    <i class="bi bi-calendar3 px-2 icon-size"></i> <span id="dateClick">{{ "now"|date("D j M Y", "Europe/Paris") }}</span>
                                </li>
                                <!-- Séparation -->
                                <li class="nav-item nav-top-vl px-2"> 
                                    <div class="vl"></div>                  
                                </li>
                                <!-- Menu CS -->
                                <li class="nav-item dropdown px-2 align-items-center">
                                    <a href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <img src="{{ asset('/images/design/menu_cs.svg') }}" alt="" width="30px">
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end rounded-0 shadow">
                                        <li>
                                            <a class="dropdown-item fs13" href="#">Le jeu</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item fs13" href="#">Notes de patch</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item fs13" href="#">Boutique</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item fs13" href="#">Support</a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item fs13" href="#">Manuel</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item fs13" href="#">Mentions légales</a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item fs13 fw-bold" href="/deconnexion">Quitter le jeu</a>
                                        </li>
                                    </ul>
                                </li> 
                                <li class="nav-item nav-top-messages px-2">
                                    <i class="bi bi-chat-dots-fill icon-size"></i>
                                </li>                              
                                <li class="nav-item px-2 nav-top-profil dropdown" id="liDropup">
                                    <a href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <img class="rounded-5" src="{{ asset('/images/' ~ app.user.imgurl) }}" alt="" width="30px">
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end rounded-0 shadow">
                                        <li>
                                            <a class="dropdown-item fs13" href="#">Profil</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item fs13" href="#">Paramètres</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
        {% endif %}
    {# Menu offline #}
        {% if is_granted('ROLE_USER') == false %}
        <nav class="navbar navbar-expand-lg bg-light layout-content py-2 navbar-height">
            <div class="container-fluid">
                <a class="navbar-brand pb-2" href="/"><img id="navbar-img" src="{{ asset('/images/design/cs_logo.png') }}"></a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="icon-size bi bi-list"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item fs13 px-2">
                            <a class="nav-link fw-bold" href="/">LE JEU</a>
                        </li>
                        <li class="nav-item fs13 px-2">
                            <a class="nav-link fw-bold" href="/">NOTES DE PATCH</a>
                        </li>
                        <li class="nav-item fs13 px-2">
                            <a class="nav-link fw-bold">BOUTIQUE</a>
                        </li>
                        <li class="nav-item fs13 px-2">
                            <a class="nav-link fw-bold">SUPPORT</a>
                        </li>
                    </ul>
                </div>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item px-2 my-2">
                            <a href="/connexion" class=" fs13 fw-bold btn btn-outline-dark rounded-0">CONNEXION</a>
                        </li>
                        <li class="nav-item px-2 my-2">
                            <a href="/inscription" class=" fs13 fw-bold btn rounded-0 btn-dark text-light">INSCRIPTION</a>
                        </li>    
                    </ul>
                </div>
            </div>
        </nav>      
        {% endif %}
    


        {% block body %}{% endblock %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
        <script src="{{ asset('/js/script.js') }}">

        {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        {% endblock %}

    </body>
</html>